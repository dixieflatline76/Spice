{
  "manifest_version": 3,
  "name": "Spice Wallpaper Manager Extension",
  "version": "1.5.2",
  "description": "Helps you add new image collections to Spice from supported image providers.",
  "permissions": [
    "activeTab",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "http://127.0.0.1:49452/*",
    "ws://127.0.0.1:49452/*",
    "ws://localhost:49452/*",
    "https://wallhaven.cc/*",
    "https://*.wikimedia.org/*",
    "https://www.pexels.com/*",
    "https://*.unsplash.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon_16.png",
      "48": "icon_48.png",
      "128": "icon_128.png"
    }
  },
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' ws://127.0.0.1:49452 http://127.0.0.1:49452;"
  }
}